PLATFORM=`uname`
export EDITOR="vi"

# reset PATH
export PATH=/usr/bin:/usr/sbin:/bin:/sbin

# add /usr/local/bin and sbin to PATH
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# add home .bin to PATH
export PATH=$HOME/.bin:$PATH

# add /usr/local/heroku/bin to PATH
export PATH=/usr/local/heroku/bin:$PATH

# add local node_modules/.bin to PATH
export PATH=./node_modules/.bin:$PATH

# professional cow-free environment
export ANSIBLE_NOCOWS=1

# get my gopher on
export GOPATH=$HOME/code/golang
export PATH=$GOPATH/bin:$PATH

# load node version manager
if [[ -d "$HOME/.nvm" && -s "$HOME/.nvm/nvm.sh" ]]; then
  export NVM_DIR=$HOME/.nvm
  source $NVM_DIR/nvm.sh
fi

# rbenv shim
if which rbenv > /dev/null; then
  eval "$(rbenv init -)"
fi

# pyenv shim
if which pyenv > /dev/null; then
  eval "$(pyenv init -)"
fi

# closure compiler install path
if [[ $PLATFORM -eq "Darwin" ]]; then
  # obtained by `brew --prefix closure-compiler` and appending '/libexec'
  export CLOSURE_PATH=/usr/local/opt/closure-compiler/libexec
fi
