# Use 256 colors
term 'screen-256color'

# Skip startup message
startup_message off

# Detach on hangup
autodetach on

# Don't freeze if screen dies
nonblock on

# Set scrollback buffer size
defscrollback 10000

# Enable visual bell
vbell on
vbell_msg "Bell on %t (%n)"

# Enable window monitoring
defmonitor on
activity 'Activity in window %n'

# Vim inspired screen region navigation
bind j focus down
bind k focus up
bind t focus top
bind b focus bottom

# Screen region resize bindings
bind = resize +5
bind - resize -5
