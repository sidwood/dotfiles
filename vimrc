" Use Vim over Vi settings (must come first)
set nocompatible

" Set leader
let mapleader=","

" Settings
set backspace=indent,eol,start
set nobackup
set nowritebackup
set noswapfile

" Appearance
set ruler
set cursorline
set number
set numberwidth=4
set showmatch
set nowrap

" Disable arrow keys
map <Left> <Nop>
map <Right> <Nop>
map <Up> <Nop>
map <Down> <Nop>
