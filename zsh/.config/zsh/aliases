. ~/.bash/aliases

# code directory shortcut
function c() {
  cd ~/code/$1;
}

# edit
alias ea='vi $ZDOTDIR/aliases && reload'
alias ec='vi $ZDOTDIR/config && reload'
alias ee='vi $ZDOTDIR/env && reload'

# search and edit
if command -v fzf &> /dev/null && command -v bat &> /dev/null; then
  alias e='vim $(fzf -m --preview "bat --color=always --style=numbers {}")'
fi

# home directory shortcut
function h() {
  cd ~/$1;
}

# reload
alias reload='source $ZDOTDIR/.zshrc'

# top (osx)
if [[ $PLATFORM == 'Darwin' ]]; then
  alias tu='top -o cpu'
  alias tm='top -o vsize'
fi

# postgres
alias pg='postgres -D /usr/local/var/postgres'

# redis
alias res='redis-server /usr/local/etc/redis.conf'
alias rec='redis-cli'
